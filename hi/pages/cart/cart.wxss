/* pages/cart/cart.wxss */
.cart-container{
  padding:20rpx;
}
.cart-item{
  margin-bottom:10rpx;
  border-bottom:1rpx solid #ccc;
  display: flex;
  position: relative;
}
.cart-more{
  padding:20rpx;
}
.cart-img image{
  width:300rpx;
  height: 200rpx;
}
.name{
  font-size: 16px;
  margin-bottom:10rpx;
}
.more-item{
  font-size: 14px;
  margin-bottom:10rpx;
}
.more-x{
  position: absolute;
  top:0;
  right:0;
  margin: 10rpx;
}
.more-x button{
  font-size:18rpx;
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx;
  border-radius: 50%;
  background: #f00;
  color:#fff;
}
.confirm{
  width: 100%;
  position: fixed;
  bottom:0;
  display: flex;
  height: 100rpx;
}
.total{
  width:50%;
  font-size: 16px;
  line-height: 1.6rem;
  background: #aaa;
  padding:20rpx;
}
.clear{
  width:10%;
  background: #aaa;
  text-align: center;
}
.clear image{
  width:100%;
  height: 70rpx;
  margin-top:15rpx; 
}
.total-btn{
  width:40%;
}
.total-btn button{
  width:100%;
  height: 100rpx;
  padding:0;
  font-size: 16px;
  line-height: 2.4rem;
  background: #f00;
  color:#fff;
  border-radius: 0;
}
.el{
  padding:20rpx;
  text-align: center;
}
.el-img image{
  margin-top:80rpx;
  width: 128px;
  height: 128px;
}
.el-text{
  font-size: 16px;
}