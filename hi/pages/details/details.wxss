/* pages/details/details.wxss */
page{
  background: #eee;
}
.title{
  background: #f00;
}
.title image{
  width: 180rpx;
  height: 180rpx;
  border-radius:50%; 
}
/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:100rpx 0;
}
.userinfo-nickname {
  color: #aaa;
}

.index-text{
  display: flex;
  flex-direction: column;
}
.text-item{
  background: #fff;
  padding: 20rpx;
  border-bottom:2rpx solid #eee;
  font-size: 16px;
}
.text-item image{
  width:24px;
  height: 24px;
  margin-bottom:-15rpx;
  margin-right: 20rpx;
}
.divider{
  height: 20rpx;
  background: #f1f1f1;
  box-shadow: 0 5rpx 5rpx rgba(0,0,0,0.1) inset;
}
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width:15rpx;
  height: 15rpx;
  border-top:3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}