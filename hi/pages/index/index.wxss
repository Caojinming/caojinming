/* pages/index/index.wxss */
.swiper,
.swiper swiper,
.swiper image{
  width:100%;
  height:750rpx;
}
.bar{
  margin-top:30rpx;
  display: flex;
  overflow-x:scroll; 
}
.bar-item{
  border:1rpx solid #ccc;
  margin:10rpx;
  padding:10rpx;
  position: relative;
}
.add{
  width:100%;
  position: absolute;
  bottom:0;
  left:0;
  background: rgba(225,0,0,0.5);
  color:#fff;
}
.bar-item image{
  width:400rpx;
  height:250rpx;
}
.title{
  font-size:16px;
  display: block;
}
.more{
  font-size:14px;
}
.service{
  margin-top: 20rpx;
  position: relative;
}
.service image{
  width:100%;
}
.service-text{
  background: #eee;
  padding:10rpx 40rpx;
  margin:0 50rpx 40rpx 50rpx;
  position: absolute;
  top:460rpx;
}
.service text{
  display: block;
  line-height: 1.5rem;
}
.service-title{
  font-size:18px;
  font-weight: bold;
  color: #555;
}
.service-li{
  font-size:12px;
  color:#666;
}